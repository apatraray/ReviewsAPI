<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="Products" transaction-type="RESOURCE_LOCAL">
        <description>JPA Test</description>
        <class>com.udacity.course3.reviews.domain.products.Products</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jdnd_c3?serverTimezone=PST"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="HelloWorld"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="Reviews" transaction-type="RESOURCE_LOCAL">
        <description>JPA Test</description>
        <class>com.udacity.course3.reviews.domain.reviews.Reviews</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jdnd_c3?serverTimezone=PST"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="HelloWorld"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="Comments" transaction-type="RESOURCE_LOCAL">
        <description>JPA Test</description>
        <class>com.udacity.course3.reviews.domain.comments.Comments</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jdnd_c3?serverTimezone=PST"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="HelloWorld"/>
        </properties>
    </persistence-unit>
</persistence>